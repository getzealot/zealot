- if @custom_data.key?('devices') && @custom_data['devices'].is_a?(Array)
  div.devices
    .box
      .box-header.with-border
        i.fa.fa-mobile-phone
        h3.box-title
          = @custom_data['devices'].size
          |  台测试设备
        .box-tools.pull-right
          button.btn.btn-box-tool data-widget="collapse"
            i.fa.fa-minus
          / button.btn.btn-box-tool data-widget="remove"
          /   i.fa.fa-times
      .box-body
        table.table
          tbody
            tr
              th NO
              th UDID
            - @custom_data['devices'].each_with_index do |udid, i|
              tr
                td
                  = i + 1
                td
                  = udid
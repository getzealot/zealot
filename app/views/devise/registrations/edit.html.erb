<div class="authform">
  <h3>编辑用户</h3>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      昵称
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
    <fieldset>
      <p>如果不需要修改密码，这里不需要填写</p>
      <div class="form-group">
        当前密码
        <%= f.password_field :password, :autocomplete => 'off', class: 'form-control' %>
      </div>
      <div class="form-group">
        密码确认
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </fieldset>
    <fieldset>
      <p>修改密码之前需要确认原先的密码</p>
      <div class="form-group">
        新密码
        <%= f.password_field :current_password, class: 'form-control' %>
      </div>
    </fieldset>
    <%= f.submit '更新', :class => 'button right' %>
  <% end %>
</div>
<div class="authform">
  <h3>API</h3>
  <p>接口调用</p>
  <div class="form-group">
    KEY
    <input type="text" class="form-control" disabled="true" value="<%= @user.key %>" />
  </div>
  <div class="form-group">
    Sercret
    <input type="text" class="form-control" disabled="true" value="<%= @user.secret %>" />
  </div>
</div>

<div class="authform">
  <h3>注销您的账户</h3>
  <p>注销账户后，您的数据将会彻底移除！</p>
  <%= button_to "确认注销", registration_path(resource_name), :data => { :confirm => "最后确认你要注销自己的账户?" }, :method => :delete, :class => 'button right' %>
</div>
